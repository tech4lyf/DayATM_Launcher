<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Selector_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgQr"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/upi_sel" />

            <ImageView
                android:id="@+id/imageView35"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/visa_sel" />

            <ImageView
                android:id="@+id/imageView36"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/aeps_sel" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivUserLogin"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/user_login_sel" />

            <ImageView
                android:id="@+id/imgWallet"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/wallet_sel" />

            <ImageView
                android:id="@+id/ivDeposit"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:src="@drawable/cash_sel" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>