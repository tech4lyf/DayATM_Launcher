<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Circle -->
    <item>
        <shape
            android:shape="oval">
            <solid android:color="#FF0000" /> <!-- Background color of the circle -->
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
    <!-- Outline Circle -->
    <item android:right="5dp" android:left="5dp" android:top="5dp" android:bottom="5dp">
        <shape
            android:shape="oval">
            <stroke
                android:width="2dp"
            android:color="#000000" /> <!-- Outline color -->
            <size
                android:width="20dp"
                android:height="20dp" />
        </shape>
    </item>
</layer-list>
